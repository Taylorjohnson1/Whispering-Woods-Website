---
// Import header and footer to each page making it easier for the user to navigate between each page.
import Mainlayout from "../../layouts/secondary-header.astro";

// Sets the company name.
let companyname = 'Whispering Woods';
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <!-- Meta Tags. -->
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <!-- Title in the tab bar. -->
        <title>{companyname} - Etiquette</title>

        <!-- Icon image to each page -->
        <link rel="icon" 
            type="image/x-icon" 
            href="/images/logos/CroppedLogo2Black.png"
        />
    </head>
    <body>

        <!-- Import header and footer to each page making it easier for the user to navigate between each page. -->
        <Mainlayout>

            <div class="container">

                <br>

                <h2><b>Tournament Information:</b></h2>
                <hr>

                <h4><b>Sail On and Fly High:</b></h4>
                <p>July 27th 2024<br>Click to register:</p>

                <a href="https://docs.google.com/forms/d/e/1FAIpQLSd5EEbkJvKngfekH1s1VvGC-h088gYD7l_3k6fQeLfVGyGE6g/viewform">
                    <button type="button" class="button btn btn-outline-dark align-center">
                        <span class="button-icon"><i class="bi bi-calendar"></i></span>
                        <span class="button-space">|</span>
                        <span class="button-text">Register</span>
                    </button>
                </a>
            
            </div>
            
            <br>

        </Mainlayout>
        
    </body>
</html>