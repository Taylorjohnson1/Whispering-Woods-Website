---
// Import header and footer to each page making it easier for the user to navigate between each page.
import HomepageLayout from "../layouts/homepage-layout.astro";

// Sets the company name.
let companyname = "Whispering Woods";
---

<!doctype html>
<html lang="en">
    <head>
        <!-- Meta Tags. -->
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <!-- Title in the tab bar. -->
        <title>{companyname} - Home</title>

        <!-- Icon image to each page -->
        <link
            rel="icon"
            type="image/x-icon"
            href="/images/logos/CroppedLogo2Black.png"
        />
    </head>
    <body>
        <!-- Import header and footer to each page making it easier for the user to navigate between each page. -->
        <HomepageLayout />
    </body>
</html>
