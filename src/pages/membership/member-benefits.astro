---
// Import header and footer to each page making it easier for the user to navigate between each page.
import Mainlayout from "../../layouts/secondary-header.astro";

// Sets the company name.
let companyname = 'Whispering Woods';
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <!-- Meta Tags. -->
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <!-- Title in the tab bar. -->
        <title>{companyname} - Member-Guest</title>

        <!-- Icon image to each page -->
        <link rel="icon" type="image/x-icon" href="/images/logos/CroppedLogo2Black.png">
    </head>
    <body>

        <!-- Import header and footer to each page making it easier for the user to navigate between each page. -->
        <Mainlayout>

            <div class="container">
                <br>
                <h2><b>Member Benefits:</b></h2>

                <hr>

                <ul>
                    <li>Unlimited golf with cart (*Member cart fees applies to the walking membership*).</li>
                    <li>Includes $300 facility fee with GHIN #.</li>
                    <li>Member only tee times throughout the week.</li>
                    <li>14 day advanced booking.</li>
                    <li>Practice area exclusive to members and paying guests only.</li>
                    <li>10% off in the snack bar and pro shop(not including alchohol.</li>
                </ul>
                
                <br>
                
            </div>

        </Mainlayout>
        
    </body>
</html>