---
// Import header and footer to each page making it easier for the user to navigate between each page.
import Mainlayout from "../../layouts/secondary-header.astro";

// Sets the company name.
let companyname = 'Whispering Woods';
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <!-- Meta Tags. -->
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <!-- Title in the tab bar. -->
        <title>{companyname} - Member-Guest</title>

        <!-- Icon image to each page -->
        <link rel="icon" type="image/x-icon" href="/images/logos/CroppedLogo2Black.png">
    </head>
    <body>

        <!-- Import header and footer to each page making it easier for the user to navigate between each page. -->
        <Mainlayout>

            <div class="container">
                <br>
                <h2><b>Member Benefits:</b></h2>

                <hr>

                <ul>
                    <li>Access to a well-maintained golf course and practice facilities.</li>
                    <li>Perfered Tee Times inlcuding 14 days advanced booking.</li>
                    <li>Top-notch practice facility that include chipping/putting green and driving range.</li>
                    <li>Access to professional coaching and golf clinics.</li>
                </ul>

                <br>
                
            </div>

        </Mainlayout>
        
    </body>
</html>