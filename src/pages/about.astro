---
// Import header and footer to each page making it easier for the user to navigate between each page.
import Mainlayout from "../layouts/mainlayout.astro";
// Imports google maps onto page so users/customers can see the location.
import GoogleMap from "../components/google-map.astro";

// Adds view transistion to and between each page.
import { ViewTransitions } from "astro:transitions";

// Sets the company name.
let companyname = 'The Woods';
---

