        <!-- Meta Tags. -->
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!-- TODO: Add Icon image to each page. -->

        <title>{companyname} - About</title>

        <!-- Icon image to each page -->
        <link rel="icon" type="image/svg+xml" href="/images/logo.png" />

        <ViewTransitions />
    </head>
    <body>

        <Mainlayout>

            <GoogleMap></GoogleMap>

            <div class="container">
                <br>

                <h1>More Information on {companyname}!</h1>

                <hr>

                <p><b>Address:</b> 3001 Macineery Dr, Council Bluffs, IA 51501</p>
                <p><b>Phone:</b> (712) 366-4653</p>

                <br>

                <p><b>Hours:</b></p>

                <hr>

                <p><b>Sunday:</b></p>
                <p><b>Monday:</b></p>
                <p><b>Tuesday:</b></p>
                <p><b>Wednesday:</b></p>
                <p><b>Thursday:</b></p>
                <p><b>Friday:</b></p>
