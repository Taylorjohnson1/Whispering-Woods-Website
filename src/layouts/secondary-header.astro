                                <a class="nav-link dropdown-toggle" href="/" role="button" data-bs-toggle="dropdown"
                                    aria-expanded="false">
                                    Golf Course
                                </a>
                                <ul class="dropdown-menu bg-light">
                                    <li><a class="dropdown-item bg-light" href="/course-rates">Course Rates</a></li>
                                    <li><a class="dropdown-item bg-light" href="/memberships">Memberships</a></li>
                                    <li><a class="dropdown-item bg-light" href="/course-overview">Course Overview</a></li>
                                    <li><a class="dropdown-item bg-light" href="/etiquette">Etiquette</a></li>
                                </ul>
                            </li>

                            <!-- Third section in the header/naviation bar. -->
