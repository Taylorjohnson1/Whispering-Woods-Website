---
// Sets the company name.
let companyname = 'Whispering Woods';

// Adds view transistion to and between each page.
// import { ViewTransitions } from "astro:transitions";
---

<!DOCTYPE html>
<html lang="en">

    <head>
        <!-- Meta Tags -->
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <!-- Imports Bootstrap 5. -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" 
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <!-- Imports Bootstrap 5 Icons -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">

        <!-- Adds view transistion to and between each page. -->
        <!-- <ViewTransitions /> -->

        <script src="https://code.jquery.com/jquery-3.6.1.min.js"
            integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script> 

    </head>
    <style>
        a {
            text-decoration: none;
            color: black;
        }
        hr {
            border-width: 2px;
            color: black;
        }
        .headerhr {
            border-width: 2px;
            color: white;
        }
        .custom-toggler .navbar-toggler-icon {
            background-image: url("data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 32 32' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='rgba(255,255,255)' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 8h24M4 16h24M4 24h24'/%3E%3C/svg%3E");
        }
        .custom-toggler.navbar-toggler {
            border-color: rgb(255,255,255);
        } 
        .icon-flex, .icon-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .icon-wrapper {
            border-radius: 50%;
            overflow: hidden;
            border: 1px solid black;
            margin: 5px;
            font-size: 5rem;
            width: 40px;
            height: 40px;
            font-size: 25px;
            background-color: black;
        }
        .icon-wrapper .bi {
            color: white;
        }
        .dropdown-menu {
            background: rgba(0,0,0, 0.5);
        }

        .dropdown-toggle {
            outline: none;
        }
        
    </style>
    <body>
        <!-- Navigation bar at the top of every page..-->
        <header class="mb-1">
            <nav class="navbar navbar-expand-lg navbar-light bg-transparent">
                <div class="container-fluid">
                    <nav class="navbar navbar-light bg-transparent">
                        <a class="navbar-brand" href="/">
                            <img src="/images/logos/CroppedLogo2.png" width="42.5" height="52.5" class="d-inline-block align-middle" alt="Logo">
                        </a>
                    </nav>

                    <!-- Responsive button that activates when in mobile view. -->
                    <button class="navbar-toggler custom-toggler text-white" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                            <!-- First section in the header/naviation bar. -->
                            <li class="nav-item">
                                <li><a class="nav-link text-white" href="https://foreupsoftware.com/index.php/booking/22289/10326#teetimes">Book a Tee Time</a></li>
                            </li>

                            <!-- Second section in the header/naviation bar. -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="/" role="button" data-bs-toggle="dropdown"
                                    aria-expanded="false">
                                    Golf Course
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item text-white bg-transparent" href="/course-rates">Course Rates</a></li>
                                    <li><a class="dropdown-item text-white bg-transparent" href="/memberships">Memberships</a></li>
                                    <li><a class="dropdown-item text-white bg-transparent" href="/course-overview">Course Overview</a></li>
                                    <li><a class="dropdown-item text-white bg-transparent" href="/etiquette">Etiquette</a></li>
                                </ul>
                            </li>

                            <!-- Third section in the header/naviation bar. -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="/" role="button" data-bs-toggle="dropdown"
                                    aria-expanded="false">
                                    Events
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item text-white bg-transparent" href="/tournament">Tournaments</a></li>
                                    <li><a class="dropdown-item text-white bg-transparent" href="/leagues">Leagues</a></li>
                                </ul>
                            </li>

                            <!-- Fourth section in the header/naviation bar. -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="/" role="button" data-bs-toggle="dropdown"
                                    aria-expanded="false">
                                    Information
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item text-white bg-transparent" href="/management-team">Management Team</a></li>
                                    <li><a class="dropdown-item text-white bg-transparent" href="/employment-opportunities">Employment Opportunities</a></li>
                                    <li><a class="dropdown-item text-white bg-transparent" href="/about">About</a></li>
                                </ul>
                            </li>
                        </ul>

                        <hr class="headerhr">

                    </div>
                </div>
            </nav>
        </header>
        
        <!-- Where all the main information is inserted when the MainLayout is called on other astro pages. -->
        <slot></slot>

        <!-- Footer at the bottom of every page. -->
        <footer>
            <div class="bg-light">
                <br>
                <div class="container">
                    <div class="row">

                        <!-- First section in the footer. -->
                        <div class="col-6 col-md-2 mb-3">
                            <h5>Golf:</h5>
                            <hr>
                            <ul class="nav flex-column">
                                <li class="nav-item mb-2"><a href="/course-rates" class="nav-link p-0 text-muted">Rates</a></li>
                                <li class="nav-item mb-2"><a href="/memberships" class="nav-link p-0 text-muted">Membership</a></li>
                                <li class="nav-item mb-2"><a href="/course-overview" class="nav-link p-0 text-muted">Course Overview</a></li>
                                <li class="nav-item mb-2"><a href="/etiquette" class="nav-link p-0 text-muted">Etiquette</a></li>
                            </ul>
                        </div>
            
                        <!-- Second section in the footer. -->
                        <div class="col-6 col-md-2 mb-3">
                            <h5>Events:</h5>
                            <hr>
                            <ul class="nav flex-column">
                                <li class="nav-item mb-2"><a href="/tournament" class="nav-link p-0 text-muted">Tournaments</a></li>
                                <li class="nav-item mb-2"><a href="/leagues" class="nav-link p-0 text-muted">Leagues</a></li>
                            </ul>
                        </div>
            
                        <!-- Third section in the footer. -->
                        <div class="col-6 col-md-2 mb-3">
                            <h5>Information:</h5>
                            <hr>
                            <ul class="nav flex-column">
                                <li class="nav-item mb-2"><a href="/management-team" class="nav-link p-0 text-muted">Management Team</a></li>
                                <li class="nav-item mb-2"><a href="/employment-opportunities" class="nav-link p-0 text-muted">Employment Opportunities</a></li>
                                <li class="nav-item mb-2"><a href="/about" class="nav-link p-0 text-muted">About</a></li>
                            </ul>
                        </div>
            
                        <!-- Fourth section in the footer. -->
                        <div class="col-auto align-right">
                            <h5>Contact:</h5>
                            <hr>
                            <ul class="nav flex-column">
                                <li class="nav-item mb-2">Learn more about {companyname}, click <a class="link" href="/about">HERE.</a></li>
                                <li class="nav-item mb-2">Phone: (712) 366-4653</li>
                                <br>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Social media and extra information. -->
                <div class="container">
                    <div class="row">
                        <hr>
                        <div class="d-flex flex-column flex-sm-row justify-content-between">
                            <div class="col-sm-6">
                                <p>Designed by Taylor Johnson | Powered by <a href="https://www.foreupgolf.com/">foreUP</a></p>
                                <p>{companyname}, Council Bluffs Iowa</p>
                            </div>

                            <div class="d-flex flex-row bd-highlight">
                                <div class="icon-flex">
                                    <div class="icon-wrapper">
                                        <div class="p-2 bd-highlight"><a href="/"><i class="bi bi-instagram" style="font-size: 25px;"></i></a></div>
                                    </div>
                                    <div class="icon-wrapper">
                                        <div class="p-2 bd-highlight"><a href="/"><i class="bi bi-twitter-x" style="font-size: 25px;"></i></a></div>
                                    </div>
                                    <div class="icon-wrapper">
                                        <div class="p-2 bd-highlight"><a href="/"><i class="bi bi-facebook" style="font-size: 25px;"></i></a></div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

                <br>

            </div>
        </footer>
        
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" 
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

    </body>
</html>

